<html>

<head>
  <title>Star Wars People</title>
  <link rel="stylesheet" href="/css/reset.css" />
  <!-- <link rel="stylesheet" href="/css/style.css" /> -->
  <link rel="stylesheet" href="/css/base.css" />
  <link rel="stylesheet" href="/css/layout.css " />
  <!-- <link rel="stylesheet" href="/css/module.css" /> -->
  <script id="character_template" type="text/x-handlebars-template">
    <h2>Character: {{name}}</h2>
    <p>Likes: {{likes}}</p>
  </script>
</head>

<body>
  <header>
    <h1>Star Wars Characters</h1>
    <p>Vote for your favorites to show what you like!</p>
  </header>
  <main>
    <section class="characters">

      <% for(let x = 0; x < results.length; x++) { %>
      <div class="character">
        <header>

          <h2><%= results[x].name %></h2>
        </header>
        <span><%= results[x].likes || 0 %></span>
        <button>Upvote</button>
      </div>
      <% } %>

    </section>
    <button>Get More Characters</button>
  </main>
  <footer class="footer">
    <strong>&copy; 2020 Code Fellows</strong>
  </footer>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.3/handlebars.min.js"></script>
  <script src="http://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="/js/app.js"></script>
</body>

</html>